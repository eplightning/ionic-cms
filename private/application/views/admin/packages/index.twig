<h2 class="with-icon" style="background-image: url(public/img/admin/item/packages.png)">Moduły systemu</h2>
<div class="section">
	<div class="theader">
		<div class="theader2">
			Moduły systemu
		</div>
	</div>
	<table class="itable">
		<tr>
			<th style="width: 16px"></th>
			<th>Moduł</th>
		</tr>
		{% for pkg in list %}
		<tr>
			<td><img src="public/img/admin/item/packages.png" alt="" /></td>
			<td>
                {{ pkg.name }}<small>; Wersja: {{ pkg.installed_version }} (dostępna: {{ pkg.version }})</small>
                <p style="color: #555; font-size: 0.8em">{{ pkg.description }} - Autor: {{ pkg.author }}</p>
                {% if pkg.actions|length > 0 %}
                <div class="toolbar ui-widget-header ui-corner-all" style="text-align: left">
                    {% for k,v in pkg.actions %}
                    <a class="action" href="{{ v }}">{{ k }}</a>
                    {% endfor %}
                </div>
                {% endif %}
            </td>
		</tr>
		{% endfor %}
	</table>
</div>
<script type="text/javascript">
$(function() {
	$('a.action').button();
});
</script>