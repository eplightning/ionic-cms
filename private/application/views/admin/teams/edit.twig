<h2>Edycja klubu</h2>
<form action="admin/teams/edit/{{ object.id }}" method="post" enctype="multipart/form-data">
	<div class="section">
		<div class="theader">
			<div class="theader2">Podstawowe</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="name">Nazwa<br /><small>Nazwa klubu</small></label>
				<div class="right">
				{% if errors.has('name') %}
					<div class="error">{{ errors.first('name') }}</div>
				{% endif %}
				<input type="text" id="name" name="name" value="{% if old_data.name != '' %}{{ old_data.name|e }}{% else %}{{ object.name }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="slug">Slug<br /><small>Slug widoczny w linkach</small></label>
				<div class="right">
				{% if errors.has('slug') %}
					<div class="error">{{ errors.first('slug') }}</div>
				{% endif %}
				<input type="text" id="slug" name="slug" value="{% if old_data.slug != '' %}{{ old_data.slug|e }}{% else %}{{ object.slug }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="image">Herb<br /><small>Zostaw puste jeśli bez zmian</small></label>
				<div class="right">
				{% if errors.has('image') %}
					<div class="error">{{ errors.first('image') }}</div>
				{% endif %}
				<input type="file" id="image" name="image" />
				</div>
			</div>
			<div class="elem">
				<label for="is_distinct">Wyróżniony<br /><small>Wyróżnić klub w tabelach itp.</small></label>
				<div class="right">
				{% if errors.has('is_distinct') %}
					<div class="error">{{ errors.first('is_distinct') }}</div>
				{% endif %}
				<input class="checkbox" type="checkbox" id="is_distinct" name="is_distinct" value="1"{% if object.is_distinct == '1' %} checked="checked"{% endif %} />
				</div>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="theader">
			<div class="theader2">Inne</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="country">Kraj</label>
				<div class="right">
				{% if errors.has('country') %}
					<div class="error">{{ errors.first('country') }}</div>
				{% endif %}
				<select name="country" id="country">
					<option value="">---</option>
					{% for k,v in countries %}
					<option value="{{ k }}"{% if k == object.country %} selected="selected"{% endif %}>{{ v }}</option>
					{% endfor %}
				</select>
				</div>
			</div>
			<div class="elem">
				<label for="year">Rok założenia<br /><small>Rok założenia klubu</small></label>
				<div class="right">
				{% if errors.has('year') %}
					<div class="error">{{ errors.first('year') }}</div>
				{% endif %}
				<input type="text" id="year" name="year" value="{% if old_data.year != '' %}{{ old_data.year|e }}{% elseif object.year %}{{ object.year|e }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="address">Adres<br /><small>Adres klubu</small></label>
				<div class="right">
				{% if errors.has('address') %}
					<div class="error">{{ errors.first('address') }}</div>
				{% endif %}
				<input type="text" id="address" name="address" value="{% if old_data.address != '' %}{{ old_data.address|e }}{% else %}{{ object.address }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="colors">Barwy<br /><small>Barwy klubu</small></label>
				<div class="right">
				{% if errors.has('colors') %}
					<div class="error">{{ errors.first('colors') }}</div>
				{% endif %}
				<input type="text" id="colors" name="colors" value="{% if old_data.colors != '' %}{{ old_data.colors|e }}{% else %}{{ object.colors }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="stadium">Stadion<br /><small>Stadion klubu</small></label>
				<div class="right">
				{% if errors.has('stadium') %}
					<div class="error">{{ errors.first('stadium') }}</div>
				{% endif %}
				<input type="text" id="stadium" name="stadium" value="{% if old_data.stadium != '' %}{{ old_data.stadium|e }}{% else %}{{ object.stadium }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="chairman">Prezes<br /><small>Prezes/prezydent klubu</small></label>
				<div class="right">
				{% if errors.has('chairman') %}
					<div class="error">{{ errors.first('chairman') }}</div>
				{% endif %}
				<input type="text" id="chairman" name="chairman" value="{% if old_data.chairman != '' %}{{ old_data.chairman|e }}{% else %}{{ object.chairman }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="coach">Trener<br /><small>Trener/menedżer klubu</small></label>
				<div class="right">
				{% if errors.has('coach') %}
					<div class="error">{{ errors.first('coach') }}</div>
				{% endif %}
				<input type="text" id="coach" name="coach" value="{% if old_data.coach != '' %}{{ old_data.coach|e }}{% else %}{{ object.coach }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="star">Gwiazda<br /><small>Gwiazda zespołu</small></label>
				<div class="right">
				{% if errors.has('star') %}
					<div class="error">{{ errors.first('star') }}</div>
				{% endif %}
				<input type="text" id="star" name="star" value="{% if old_data.star != '' %}{{ old_data.star|e }}{% else %}{{ object.star }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="webpage">Strona internetowa<br /><small>Link do strony internetowej klubu</small></label>
				<div class="right">
				{% if errors.has('webpage') %}
					<div class="error">{{ errors.first('webpage') }}</div>
				{% endif %}
				<input type="text" id="webpage" name="webpage" value="{% if old_data.webpage != '' %}{{ old_data.webpage|e }}{% else %}{{ object.webpage }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="description">Opis<br /><small>Informacje o klubie</small></label>
				<div class="right">
				{% if errors.has('description') %}
					<div class="error">{{ errors.first('description') }}</div>
				{% endif %}
				{% if old_data.description != '' %}
					{{ editor('description', old_data.description|e) }}
				{% else %}
					{{ editor('description', object.description|e) }}
				{% endif %}
				</div>
			</div>
		</div>
	</div>
	<div class="toolbar ui-widget-header ui-corner-all">
		{{ form_token() }}
		<input type="submit" name="submit" style="width: auto" value="Zapisz" />
	</div>
</form>
<script type="text/javascript">
$(function(){
	$('input[type="submit"]').button();
});
</script>