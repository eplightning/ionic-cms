<h2>Dodawanie użytkownika</h2>
<form action="admin/users/add" method="post">
	<div class="section">
		<div class="theader">
			<div class="theader2">Podstawowe dane</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="username">Login<br /><small>Używane wyłącznie do logowania</small></label>
				<div class="right">
				{% if errors.has('username') %}
					<div class="error">{{ errors.first('username') }}</div>
				{% endif %}
				<input type="text" id="username" name="username" value="{{ old_data.username|e }}" />
				</div>
			</div>
			<div class="elem">
				<label for="display_name">Nazwa wyświetlana<br /><small>Nazwa widoczna dla innych użytkowników</small></label>
				<div class="right">
				{% if errors.has('display_name') %}
					<div class="error">{{ errors.first('display_name') }}</div>
				{% endif %}
				<input type="text" id="display_name" name="display_name" value="{{ old_data.display_name|e }}" />
				</div>
			</div>
			<div class="elem">
				<label for="email">E-mail<br /><small>E-mail użytkownika</small></label>
				<div class="right">
				{% if errors.has('email') %}
					<div class="error">{{ errors.first('email') }}</div>
				{% endif %}
				<input type="text" id="email" name="email" value="{{ old_data.email|e }}" />
				</div>
			</div>
			<div class="elem">
				<label for="password">Hasło<br /><small>Hasło potrzebne do logowania</small></label>
				<div class="right">
				{% if errors.has('password') %}
					<div class="error">{{ errors.first('password') }}</div>
				{% endif %}
				<input type="password" id="password" name="password" value="{{ old_data.password|e }}" />
				</div>
			</div>
			<div class="elem">
				<label for="group_id">Grupa<br /><small>Grupa użytkowników</small></label>
				<div class="right">
				{% if errors.has('group_id') %}
					<div class="error">{{ errors.first('group_id') }}</div>
				{% endif %}
				<select id="group_id" name="group_id">
				{% for k, v in related_group_id %}
					<option value="{{ k }}"{% if old_data.group_id == k %} selected="selected"{% endif %}>{{ v|e }}</option>
				{% endfor %}
				</select>
				</div>
			</div>
		</div>
	</div>
	<div class="toolbar ui-widget-header ui-corner-all">
		{{ form_token() }}
		<input type="submit" name="submit" style="width: auto" value="Zapisz" />
	</div>
</form>
<script type="text/javascript">
$(function(){
	$('input[type="submit"]').button();
});
</script>