<h2>Edycja meczu</h2>
<form action="admin/bet_matches/edit/{{ object.id }}" method="post">
	<div class="section">
		<div class="theader">
			<div class="theader2">Kluby</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="home">Gospodarz<br /><small>Gospodarz meczu</small></label>
				<div class="right">
				{% if errors.has('home') %}
					<div class="error">{{ errors.first('home') }}</div>
				{% endif %}
				<input type="text" id="home" name="home" value="{% if old_data.home != '' %}{{ old_data.home|e }}{% else %}{{ object.home }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="away">Gość<br /><small>Gość meczu</small></label>
				<div class="right">
				{% if errors.has('away') %}
					<div class="error">{{ errors.first('away') }}</div>
				{% endif %}
				<input type="text" id="away" name="away" value="{% if old_data.away != '' %}{{ old_data.away|e }}{% else %}{{ object.away }}{% endif %}" />
				</div>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="theader">
			<div class="theader2">Inne</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="score">Wynik<br /><small>Wynik w formacie XX:YY. Zostaw puste jeśli mecz się nie odbył</small></label>
				<div class="right">
				{% if errors.has('score') %}
					<div class="error">{{ errors.first('score') }}</div>
				{% endif %}
				<input type="text" id="score" name="score" value="{% if old_data.score != '' %}{{ old_data.score|e }}{% else %}{{ object.score|e }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="archive">Archiwizuj<br /><small>Głównie dla celów łatwiejszego zarządzania meczami w panelu...</small></label>
				<div class="right">
				{% if errors.has('archive') %}
					<div class="error">{{ errors.first('archive') }}</div>
				{% endif %}
				<input class="checkbox" type="checkbox" id="archive" name="archive" value="1"{% if object.archive == '1' %} checked="checked"{% endif %} />
				</div>
			</div>
			<div class="elem">
				<label for="date_start">Data rozp.<br /><small>Od kiedy można typować</small></label>
				<div class="right">
				{% if errors.has('date_start') %}
					<div class="error">{{ errors.first('date_start') }}</div>
				{% endif %}
				<input class="timepicker" type="text" id="date_start" name="date_start" value="{% if old_data.date_start != '' %}{{ old_data.date_start|e }}{% else %}{{ object.date_start|e }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="date_end">Data zak.<br /><small>Do kiedy można typować</small></label>
				<div class="right">
				{% if errors.has('date_end') %}
					<div class="error">{{ errors.first('date_end') }}</div>
				{% endif %}
				<input class="timepicker" type="text" id="date_end" name="date_end" value="{% if old_data.date_end != '' %}{{ old_data.date_end|e }}{% else %}{{ object.date_end|e }}{% endif %}" />
				</div>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="theader">
			<div class="theader2">Typer: Obstawianie</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="ratio_home">Przelicznik 1<br /><small>Przelicznik dla wygranej gospodarzy. Dwa miejsca po przecinku</small></label>
				<div class="right">
				{% if errors.has('ratio_home') %}
					<div class="error">{{ errors.first('ratio_home') }}</div>
				{% endif %}
				<input type="text" id="ratio_home" name="ratio_home" value="{% if old_data.ratio_home != '' %}{{ old_data.ratio_home|e }}{% else %}{{ object.ratio_home|e }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="ratio_draw">Przelicznik 2<br /><small>Przelicznik dla remisu. Dwa miejsca po przecinku</small></label>
				<div class="right">
				{% if errors.has('ratio_draw') %}
					<div class="error">{{ errors.first('ratio_draw') }}</div>
				{% endif %}
				<input type="text" id="ratio_draw" name="ratio_draw" value="{% if old_data.ratio_draw != '' %}{{ old_data.ratio_draw|e }}{% else %}{{ object.ratio_draw|e }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="ratio_away">Przelicznik 3<br /><small>Przelicznik dla wygranej gości. Dwa miejsca po przecinku</small></label>
				<div class="right">
				{% if errors.has('ratio_away') %}
					<div class="error">{{ errors.first('ratio_away') }}</div>
				{% endif %}
				<input type="text" id="ratio_away" name="ratio_away" value="{% if old_data.ratio_away != '' %}{{ old_data.ratio_away|e }}{% else %}{{ object.ratio_away|e }}{% endif %}" />
				</div>
			</div>
		</div>
	</div>
	<div class="toolbar ui-widget-header ui-corner-all">
		{{ form_token() }}
		<input type="submit" name="submit" style="width: auto" value="Zapisz" />
	</div>
</form>
<script type="text/javascript">
$(function(){
	$('input[type="submit"]').button();
	$('.timepicker').datetimepicker({
		timeFormat: 'HH:mm:ss',
		dateFormat: 'yy-mm-dd',
		showSecond: true
	});
});
</script>