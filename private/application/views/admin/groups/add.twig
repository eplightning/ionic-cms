<h2>Dodawanie grupy</h2>
<form action="admin/groups/add" method="post">
	<div class="section">
		<div class="theader">
			<div class="theader2">Dane</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="name">Nazwa<br /><small>Nazwa grupy</small></label>
				<div class="right">
				{% if errors.has('name') %}
					<div class="error">{{ errors.first('name') }}</div>
				{% endif %}
				<input type="text" id="name" name="name" value="{{ old_data.name|e }}" />
				</div>
			</div>
			<div class="elem">
				<label for="description">Opis<br /><small>Opis grupy</small></label>
				<div class="right">
				{% if errors.has('description') %}
					<div class="error">{{ errors.first('description') }}</div>
				{% endif %}
				<textarea id="description" name="description" rows="10" cols="50">{{ old_data.description|e }}</textarea>
				</div>
			</div>
			<div class="elem">
				<label for="name">Styl<br /><small>Styl grupy</small></label>
				<div class="right">
				{% if errors.has('style') %}
					<div class="error">{{ errors.first('style') }}</div>
				{% endif %}
				<input type="text" id="style" name="style" value="{{ old_data.style|e }}" />
				</div>
			</div>
		</div>
	</div>
	<div class="toolbar ui-widget-header ui-corner-all">
		{{ form_token() }}
		<input type="submit" name="submit" style="width: auto" value="Zapisz" />
	</div>
</form>
<script type="text/javascript">
$(function(){
	$('input[type="submit"]').button();
});
</script>