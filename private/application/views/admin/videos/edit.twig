<h2>Edycja video</h2>
<form action="admin/videos/edit/{{ object.id }}" method="post">
	<div class="section">
		<div class="theader">
			<div class="theader2">Podstawowe</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="title">Tytuł<br /><small>Tytuł video</small></label>
				<div class="right">
				{% if errors.has('title') %}
					<div class="error">{{ errors.first('title') }}</div>
				{% endif %}
				<input type="text" id="title" name="title" value="{% if old_data.title != '' %}{{ old_data.title|e }}{% else %}{{ object.title }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="slug">Slug<br /><small>Slug widoczny w linkach</small></label>
				<div class="right">
				{% if errors.has('slug') %}
					<div class="error">{{ errors.first('slug') }}</div>
				{% endif %}
				<input type="text" id="slug" name="slug" value="{% if old_data.slug != '' %}{{ old_data.slug|e }}{% else %}{{ object.slug }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="description">Opis<br /><small>Opis filmu</small></label>
				<div class="right">
				{% if errors.has('description') %}
					<div class="error">{{ errors.first('description') }}</div>
				{% endif %}
				<textarea id="description" name="description" rows="10" cols="50">{% if old_data.description != '' %}{{ old_data.description|e }}{% else %}{{ object.description }}{% endif %}</textarea>
				</div>
			</div>
			<div class="elem">
				<label for="thumbnail">Link do miniaturki<br /><small>Automatycznie dla filmów z YouTube, Vimeo, Dailymotion, Metacafe oraz Flickr-a.</small></label>
				<div class="right">
				{% if errors.has('thumbnail') %}
					<div class="error">{{ errors.first('thumbnail') }}</div>
				{% endif %}
				<input type="text" id="thumbnail" name="thumbnail" value="{% if old_data.thumbnail != '' %}{{ old_data.thumbnail|e }}{% else %}{{ object.thumbnail }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="category_id">Kategoria<br /><small>Kategoria pliku</small></label>
				<div class="right">
					<select name="category_id" id="category_id">
					{% for k, v in categories %}
					<option value="{{ k }}"{% if k == object.category_id %} selected="selected"{% endif %}>{{ v }}</option>
					{% endfor %}
					</select>
				</div>
			</div>
		</div>
	</div>
	<div class="section">
		<div class="theader">
			<div class="theader2">Video</div>
		</div>
		<div class="section-content">
			<div class="elem">
				<label for="link">Link do filmu<br /><small>Poniższe pole zostanie wypełnione jeśli podasz tutaj link do video z YouTube, Vimeo, Dailymotion, Metacafe, Ekstraklasa.tv oraz Flickr-a.</small></label>
				<div class="right">
				{% if errors.has('link') %}
					<div class="error">{{ errors.first('link') }}</div>
				{% endif %}
				<input type="text" id="link" name="link" value="{% if old_data.link != '' %}{{ old_data.link|e }}{% else %}{{ object.link }}{% endif %}" />
				</div>
			</div>
			<div class="elem">
				<label for="embed">HTML filmu<br /><small>Kod HTML filmu. Nie wymagane jeśli podałeś link</small></label>
				<div class="right">
				{% if errors.has('embed') %}
					<div class="error">{{ errors.first('embed') }}</div>
				{% endif %}
				<textarea id="embed" name="embed" rows="10" cols="50">{% if old_data.embed != '' %}{{ old_data.embed|e }}{% else %}{{ object.embed|e }}{% endif %}</textarea>
				</div>
			</div>
		</div>
	</div>
	<div class="toolbar ui-widget-header ui-corner-all">
		{{ form_token() }}
		<input type="submit" name="submit" style="width: auto" value="Zapisz" />
	</div>
</form>
<script type="text/javascript">
$(function(){
	$('input[type="submit"]').button();
});
</script>